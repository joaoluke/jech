// ==============
// Basic examples of the logic operators
// ==============

// Combination
keep total = 5;
total = total + 5; // 10
total = total - 2; // 8
total = total * 2; // 16
total = total / 4; // 4
say(total);

// Binary operators inside when
keep x = 3;

when (x > 2) {
    say("x is greater than 2");
}

when (x < 5) {
    say("x is less than 5");
}

when (x == 3) {
    say("x equals 3");
}

// When condition false: should not print
when (x > 10) {
    say("Should not appear");
}

